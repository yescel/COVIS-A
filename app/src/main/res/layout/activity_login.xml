<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tallerandroid.covis_a.LoginActivity"
    android:background="@color/cardview_light_background">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint = "Password"
        android:background="@color/backgroudButton"
        android:layout_marginBottom="17dp"
        android:gravity="center_horizontal"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsuario"
        android:hint = "Usuario"
        android:background="@color/backgroudButton"
        android:gravity="center_horizontal"
        android:textColorHint="@color/colorPrimaryDark"
        android:translationZ="@dimen/cardview_default_radius"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo4"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="COVIS-A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCovis"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        style="@style/AppTheme"
        android:layout_above="@+id/tvBienvenido"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBienvenido"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/etUsuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Iniciar Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:background="@color/colorAccent"
        style="@android:style/Widget.Button.Inset"
        android:textColor="@android:color/background_dark"
        android:translationZ="@dimen/cardview_default_elevation"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:textSize="18sp"
        android:onClick="IniciaSesion" />

</RelativeLayout>
